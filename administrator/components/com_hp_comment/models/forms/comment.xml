<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_banners/models/fields"
	>
		<field name="id" type="text" default="0"
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />
			
		<field name="reply_id" type="hidden" default="0"
			class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />

		<field name="content" type="textarea" class="textarea_input"
			rows="5" cols="60" label="Content" />
			
		<field name="reply_content" type="textarea" class="textarea_input"
			rows="5" cols="60" label="Reply" />
			
		<field name="modified" type="calendar" class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_HP_COMMENT_FIELD_MODIFIED_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="modified_by" type="user"
		label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
		class="readonly"
		readonly="true"
		filter="unset"
		 />

	</fieldset>

	<fieldset name="publish"
		label="COM_HP_COMMENT_GROUP_LABEL_PUBLISHING_DETAILS"
	>
			
		<field name="created_by" type="user"
			label="Created By" />

		<field name="created" type="calendar"
			label="Created"
			class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" />

		

	</fieldset>


</form>
